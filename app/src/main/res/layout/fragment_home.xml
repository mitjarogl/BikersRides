<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/android_blue_extra_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moods.bikersrides.activities.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_count_all_rides"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_gray"
            android:gravity="center"
            android:text="100 km"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_last_ride"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:text="100 km"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <!--<ImageButton-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="200dp"-->
    <!--android:id="@+id/button_add"-->
    <!--android:src="@drawable/ic_button_add"-->
    <!--android:background="@drawable/button_blue_oval"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:scaleType="fitCenter"-->
    <!--android:padding="40dp"-->
    <!--android:layout_alignWithParentIfMissing="false"-->
    <!--android:baselineAlignBottom="false"-->
    <!--android:layout_above="@+id/button_my_rides"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="10dp" />-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitEnd"
        android:src="@drawable/motorbike"
        android:tint="@color/android_blue_light" />

    <Button
        android:id="@+id/button_my_rides"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/button_favourites"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_gray"
        android:drawableLeft="@drawable/ic_action_view_as_list"
        android:paddingLeft="15dp"
        android:text="My rides"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_favourites"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gray"
        android:drawableLeft="@drawable/ic_action_important"
        android:paddingLeft="15dp"
        android:text="Favourite"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
