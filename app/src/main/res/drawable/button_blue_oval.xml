<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <stroke android:width="3dip" android:color="@color/white" />
            <gradient  android:angle="-90"   android:startColor="@color/android_blue_dark" android:endColor="@color/android_blue_dark"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#5e7974" />
            <solid  android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <stroke android:width="3dip" android:color="@color/white" />
            <gradient  android:angle="-90"  android:startColor="@color/android_blue_light" android:endColor="@color/android_blue_light" />
        </shape>
    </item>
</selector>