<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.moods.bikersrides.activities.MainActivity"
                android:background="@color/android_blue_extra_light">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/button_add"
        android:src="@drawable/ic_button_add"
        android:background="@drawable/button_blue"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:layout_alignWithParentIfMissing="false"
        android:baselineAlignBottom="false"
        android:padding="5dp"
        android:layout_above="@+id/button_my_rides"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_action_view_as_list"
        android:paddingLeft="15dp"
        android:text="My rides"
        android:id="@+id/button_my_rides"
        android:background="@drawable/button_gray"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/button_add"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/button_favourites"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Favourite"
        android:drawableLeft="@drawable/ic_action_important"
        android:paddingLeft="15dp"
        android:background="@drawable/button_gray"
        android:id="@+id/button_favourites"
        android:layout_gravity="center_horizontal"
android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/button_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/android_blue_light"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mileage:"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:autoText="false"
            android:layout_weight="50"
            android:gravity="center|right"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="100 km"
            android:id="@+id/textView2"
            android:gravity="center|left"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_weight="50" />
    </LinearLayout>


</RelativeLayout>
